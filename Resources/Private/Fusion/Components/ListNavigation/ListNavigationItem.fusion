prototype(Ttree.Strapping:ListNavigationItem) < prototype(Fusion:Tag) {
    @context.target = ${target}
    tagName = 'li'

    attributes {
        class = ${component + '__item'}
    }

    content = Fusion:Tag {
        tagName = 'a'
        content = ${target.label}
        attributes {
            class = ${component + '__link'}
            href = NodeUri {
                node = ${target}
            }
        }
    }
}
