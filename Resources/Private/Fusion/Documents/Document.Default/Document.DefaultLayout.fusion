prototype(Ttree.Strapping:Document.DefaultLayout) < prototype(Page) {
    head {
        xUaCompatible = Fusion:Tag {
            tagName = 'meta'
            attributes {
                name = 'http-equiv'
                content = 'ie=edge'
            }
            @position = 'before titleTag'
        }

        viewport = Fusion:Tag {
            tagName = 'meta'
            attributes {
                name = 'viewport'
                content = 'width=device-width, initial-scale=1'
            }
            @position = 'after titleTag'
        }
    }
    body = Fusion:Case {
        @ignoreProperties = ${['site', 'node', 'javascripts']}

        documentFinder {
            @position = 'before default'
            condition = Ttree.Fusion:CanRender {
                type = ${q(documentNode).property('_nodeType')}
            }
            type = ${q(documentNode).property('_nodeType')}
        }

        default {
            type = Ttree.Strapping:Document.Default
        }
    }
}
